extends layout
block content
    form.form-horizontal(role='form' id='register' action="/register" method="post")
        legend
            h1 Register
            .form-group
                label.control-label.col-sm-2(for="firstName") First Name:
                .col-sm-10
                    input.form-control(type='text' name="firstName" id="firstName" placeholder='Enter First Name' require="true")
            .form-group
                label.control-label.col-sm-2(for="lastName") Last Name:
                .col-sm-10
                    input.form-control(type='text' name="lastName" id="lastName" placeholder='Enter Last Name')
            .form-group
                label.control-label.col-sm-2(for="username") Username:
                .col-sm-10
                    input.form-control(type='text' name="username" id="username" placeholder='Enter Username')
            .form-group
                label.control-label.col-sm-2(for="password") Password:
                .col-sm-10
                    input.form-control(type='password' name="password" id="password" placeholder='Enter Password')
            .form-group
                label.control-label.col-sm-2(for="confirm") Confirm Password:
                .col-sm-10
                    input.form-control(type='password' name="confirm" id="confirm" placeholder='Confirm Password')

            .form-group
                button.btn.btn-primary(type='submit') Submit

                a(href='/')
                    button.btn.btn-default(type="button") Cancel

            p#error.error